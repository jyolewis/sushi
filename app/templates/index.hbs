          {{else}}
          <li><button class="btn-primary" {{action 'english' }}>[eng]</button></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- ================ Carousel ================================ -->

<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <img src="sushi_slider.jpg">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="main_title">{{view.title}}<span id="reg">&reg;</span>{{view.kanji}}</h1>
          <p><!--Note: If you're viewing this page via a <code>file://</code> URL, the "next" and "previous" Glyphicon buttons on the left and right might not load/display properly due to web browser security rules.--></p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">{{view.btn1}}</a></p>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="sushi_slider.jpg">
      <div class="container">
        <div class="carousel-caption">
          <h1>{{view.caption2}}</h1>
          <p>{{view.lorem}}</p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">{{view.btn2}}</a></p>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="sushi_slider.jpg">
      <div class="container">
        <div class="carousel-caption">
          <h1>{{view.caption3}}</h1>
          <p>{{view.lorem}}</p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">{{view.btn3}}</a></p>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->


